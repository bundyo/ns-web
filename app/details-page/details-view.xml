<StackLayout xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
    <ListView items="{{ items }}" itemTap="{{ listViewItemTap }}">
        <ListView.itemTemplate>
            <StackLayout>
                <Label text="{{ title }}" class="detail-title"/>
                <Label text="{{ info }}" class="info" textWrap="true"/>
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</StackLayout>
