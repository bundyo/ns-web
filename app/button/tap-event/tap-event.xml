<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      loaded="pageLoaded">
    <ActionBar class="action-bar" title="Tap Event">
        <ActionItem web.position="left" class="btn" tap="{{ goBack }}" text="Back"/>
    </ActionBar>

    <ScrollView>
        <StackLayout class="m-15">
            <!-- >> button-tap-event-html -->
            <Button class="btn btn-primary btn-active" id="button" text="Tap me!" tap="{{ onTap }}"/>
            <Label text="{{ countMessage }}"/>
            <!-- << button-tap-event-html -->
        </StackLayout>
    </ScrollView>
</Page>
