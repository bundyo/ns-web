<Page xmlns="http://schemas.nativescript.org/tns.xsd"
      loaded="pageLoaded">
    <ActionBar class="action-bar" title="Binding Text">
        <ActionItem android.position="left" class="btn" tap="{{ goBack }}" text="Back"/>
    </ActionBar>

    <ScrollView>
      <StackLayout>
          <Label class="p-15" text="Modified button text" />
          <Button class="btn btn-primary btn-active" id="button" text="Rebind" tap="rebind" />
          <StackLayout/>
          <Button class="btn" id="button" text="{{ content }}" />
      </StackLayout>
    </ScrollView>
</Page>
